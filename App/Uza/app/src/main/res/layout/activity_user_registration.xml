<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/logo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/close"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/to"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/you"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="11dp"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:maxLines="1"
                        android:inputType="textPersonName"
                        android:textColor="#000"
                        android:id="@+id/et_fname_reg"
                        android:paddingLeft="20dp"
                        android:hint="First Name"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="11dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:maxLines="1"
                        android:inputType="textPersonName"
                        android:textColor="#000"
                        android:id="@+id/et_lname_reg"
                        android:paddingLeft="20dp"
                        android:hint="Last Name"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="11dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        android:textColor="#000"
                        android:id="@+id/et_email_reg"
                        android:paddingLeft="20dp"
                        android:hint="Email Address"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="11dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:maxLines="1"
                        android:maxLength="10"
                        android:inputType="phone"
                        android:textColor="#000"
                        android:id="@+id/et_phone_reg"
                        android:paddingLeft="20dp"
                        android:hint="Phone"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="11dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:maxLines="1"
                        android:textAllCaps="true"
                        android:inputType="textCapCharacters"
                        android:textColor="#000"
                        android:id="@+id/et_county_reg"
                        android:paddingLeft="20dp"
                        android:hint="County"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="11dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:textColor="#000"
                        android:id="@+id/et_pass_reg"
                        android:paddingLeft="20dp"
                        android:hint="Password"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="11dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:textColor="#000"
                        android:id="@+id/et_pass_confirm_reg"
                        android:paddingLeft="20dp"
                        android:hint="Confirm Password"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="200dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:elevation="11dp"
                android:background="@color/colorPrimary"
                android:textColor="#FFF"
                android:visibility="visible"
                android:id="@+id/bt_reg_reg"
                android:layout_marginBottom="50dp"
                android:text="Register"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:id="@+id/reg_loading"
                android:visibility="gone"
                android:layout_marginBottom="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="60dp"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:id="@+id/reg_loading_screen"
        android:alpha="0"/>

</RelativeLayout>