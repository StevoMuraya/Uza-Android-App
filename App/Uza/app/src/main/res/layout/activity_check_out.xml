<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOutActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:text="Delivery Information"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="7dp"
            app:cardCornerRadius="8dp"
            android:background="#FFF"
            app:cardBackgroundColor="#FFF"
            android:elevation="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:id="@+id/checkout_username"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:text="Stephen G. Muraya"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkout_location"
                    android:layout_marginStart="20dp"
                    android:text="County"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:id="@+id/checkout_details"
                    android:text="Stephen G. Muraya"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:text="Cart Items"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/checkout_recycler"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:text="Cost:   "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/checkout_cost_no_shipping"
                    android:textColor="#000"
                    android:layout_marginEnd="20dp"
                    android:text="Kshs 2000"/>
            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#656565"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:text="Total Cost:   "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:id="@+id/checkout_total_amount"
                android:textColor="#000"
                android:layout_marginEnd="20dp"
                android:text="Kshs 2000"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#656565"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="Items count:   "/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000"
                android:id="@+id/checkout_count"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="1 Item"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="Tax Rate 16%:   "/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000"
                android:id="@+id/tax_checkout"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="Kshs 100"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="Shipping Fee:   "/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="Kshs 300"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:text="Payment Method"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="7dp"
            app:cardCornerRadius="8dp"
            android:background="#FFF"
            app:cardBackgroundColor="#FFF"
            android:elevation="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Select one of the payment options below to proceed"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:lines="2"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="Mobile\nM-Pesa"/>
                        <com.like.LikeButton
                            app:icon_size="30dp"
                            app:like_drawable="@drawable/mpesa_logo"
                            android:id="@+id/checkout_mpesa"
                            app:circle_start_color="#549C36"
                            app:dots_primary_color="#DE1D23"
                            app:dots_secondary_color="#549C36"
                            app:circle_end_color="#DE1D23"
                            app:unlike_drawable="@drawable/mpesa_not"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/mpesa_check"
                            android:layout_height="20dp"
                            android:visibility="invisible"
                            android:src="@drawable/check"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:lines="2"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="Credit\nCard"/>
                        <com.like.LikeButton
                            app:icon_size="30dp"
                            android:id="@+id/checkout_credit_card"
                            app:like_drawable="@drawable/credit_card"
                            app:unlike_drawable="@drawable/credit_card_not"
                            app:circle_start_color="#3159A7"
                            app:dots_primary_color="#F4C721"
                            app:dots_secondary_color="#3159A7"
                            app:circle_end_color="#F4C721"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:visibility="invisible"
                            android:id="@+id/card_check"
                            android:src="@drawable/check"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:lines="2"
                            android:textStyle="bold"
                            android:text="Cash on\nDelivery"/>
                        <com.like.LikeButton
                            app:icon_size="30dp"
                            android:id="@+id/checkout_cash_on_delivery"
                            app:unlike_drawable="@drawable/cash_off"
                            app:like_drawable="@drawable/cash_on"
                            app:circle_start_color="#4BA5A5"
                            app:dots_primary_color="#FAB47C"
                            app:dots_secondary_color="#4BA5A5"
                            app:circle_end_color="#FAB47C"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:visibility="invisible"
                            android:id="@+id/cash_check"
                            android:src="@drawable/check"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/select_payment"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Please select one of the payment options above"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:gravity="center"
            android:text="The product(s) will be delivered to your registered county of location as indicated at the top of this page.\n We will contact you once the product(s) is delivered to an Uza pickup station"/>

        <Button
            android:id="@+id/checkout_proceed"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:visibility="visible"
            android:background="@color/colorPrimary"
            android:elevation="11dp"
            android:text="Proceed"
            android:textColor="#FFF" />

            <ProgressBar
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:id="@+id/cash_loading"
                android:visibility="gone"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"/>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/cash_loading_screen"
        android:background="#000"
        android:alpha=".5"/>
</RelativeLayout>