<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        android:elevation="11dp"
        app:cardBackgroundColor="#FFF"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_toStartOf="@+id/cart_percent"
                android:layout_height="wrap_content"
                android:id="@+id/cart_layout">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/cart_image_view"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_shopping_cart_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product name"
                    android:id="@+id/cart_product_name"
                    android:layout_toEndOf="@+id/cart_image_view"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="category"
                    android:layout_below="@+id/cart_product_name"
                    android:layout_toEndOf="@+id/cart_image_view"
                    android:id="@+id/cart_category"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:layout_below="@+id/cart_category"
                    android:layout_toEndOf="@+id/cart_image_view"
                    android:id="@+id/cart_price"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:gravity="center|start"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_layout"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:fitsSystemWindows="true"
                    android:padding="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity: "/>

                    <TextView
                        android:id="@+id/cart_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="10"
                        android:textColor="#000"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="item(s)"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        app:cardCornerRadius="15dp"
                        android:id="@+id/plus_1_cart"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#15BC31"
                        android:elevation="0dp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:padding="4dp"
                                android:gravity="center"
                                android:text="+1"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        app:cardCornerRadius="15dp"
                        android:id="@+id/minus_1_cart"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#CA4343"
                        android:elevation="0dp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:padding="4dp"
                                android:gravity="center"
                                android:text="-1"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Remove"
                    android:id="@+id/cart_remove_item"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:textColor="#fff"
                    android:background="#ff0000"/>

            </LinearLayout>
            <TextView
                android:layout_width="35dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/cart_percent"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:alpha=".7"
                android:layout_marginEnd="5dp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:background="#959AB8"
                android:fitsSystemWindows="true"
                android:textSize="11sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="20%"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:alpha="0"
            android:id="@+id/cart_design_loading_screen"/>

        <ProgressBar
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:id="@+id/cart_loading"
            android:visibility="gone"
            android:fitsSystemWindows="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="20dp"
            android:layout_height="30dp"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>